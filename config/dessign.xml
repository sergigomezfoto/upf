<if check="stageheight LT 1024">

    <scrollarea
        textheight="180"
    />
    <margins
        top="30"
        right="30"
        bottom="30"
        left="30"
    />
 <set var="supercontainery" val="140"/>
<action name="" autorun="true">   

    trace(get(stageheight), 'HEIGHT PETIT');
</action>

</if>

<if check="stageheight GE 1024">
    <scrollarea
        textheight="280"
    />
    <margins
        top="50"
        right="50"
        bottom="50"
        left="50"
    />
    <set var="supercontainery" val="180"/>
<action name="" autorun="true">

    trace(get(stageheight), 'HEIGHT GRAN');
</action>
</if>

<events name="gray_background" onresize="gb_calc" keep="true" />


<action name="gb_calc">
gb=layer[gray_bg];
 <!-- gb=caller;     -->
        calculated=(stageheight - 37);  
        tween(gb.height,*calculated,0.1,linear);
    

</action>

</krpano>
